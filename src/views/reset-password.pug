doctype html
html
  head
    title Reset Password
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .container {
        background: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
      }
      h2 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
        text-align: center;
      }
      .error-message {
        color: red;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        display: none;
      }
      button {
        background: #007bff;
        color: #fff;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        font-size: 1rem;
      }
      #password {
        width: 92%;
        padding: 10px;
      }
      button:disabled {
        background: #ccc;
        cursor: not-allowed;
      }
      #resetPasswordForm {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

  body
    div.container
      h2 Reset Your Password
      form(action=`/user/reset-Password/${token}?accountType=${accountType}` method="POST" id="resetPasswordForm")
        input(type="password" name="password" id="password" placeholder="Enter your new password" required)
        div.error-message#passwordError Password must contain:
          ul
            li At least 8 characters
            li At least 1 uppercase letter
            li At least 1 numeric character
            li At least 1 special character
        button(type="submit" id="submitButton" disabled) Reset Password

  // Include the external JavaScript file
  script(src='/js/reset-password.js') 
